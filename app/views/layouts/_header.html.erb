<div id="navbar" >
            <header class="container_16">
                <div class="grid_16">
                    <div class=" logo grid_2  alpha">
                        <%= link_to (image_tag("logo2.png")), root_path %>
                    
                    </div>
                    


                    <div class=" nav_main grid_14  omega">
     
                    <% if user_signed_in?%>

                    <div class=" header_search grid_2  alpha">
                         <%= form_tag pins_path, :method => 'get', :class =>'form-search' do %>
                            <div class="input-append">
                                <%= text_field_tag :search, params[:search],class: "span2 search-query" %>
                                <%= submit_tag "Search" , :name => nil, class: "btn"%>
                            </div>
                         <% end %>
                    </div>
                        
                    <div class="user_nav prefix_10 grid_1 omega">
                        <div class="btn-group">
                            <a class="btn2" href="#"><%=image_tag current_user.gravatar_url %></a>
                            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><%=link_to raw("<i class=\"icon-plus\"></i><span class='menu-drop'>Add Pins</span>") , new_pin_path %></li>
                                <li><%=link_to raw("<i class=\"icon-star\"></i><span class='menu-drop'>My Pins</span>"),current_user %></li>
                                <li><%=link_to raw("<i class=\"icon-bullhorn\"></i><span class='menu-drop'>Feed</span>"),activities_path  %>
                                </li>
                                <li><%=link_to raw("<i class=\"icon-user\"></i><span class='menu-drop'>Profile</span>"),edit_user_registration_path%>
                                </li>
                                <li class="divider"></li>
                                <li><%=link_to raw("<i class=\"icon-off\"></i><span class='menu-drop'>Logout</span>"), destroy_user_session_path, method: :delete %></li>
                            </ul>
                        </div>
                        
                   
                     <%else%>
                            <ul>

                                <li>
                                    <%= link_to 'About', about_path %>
                                </li>


                                <li>
                                    <%= link_to 'login', login_path %>
                                </li>
                                
                                <li>
                                <%= link_to 'contact us ', contact_path %>
                                </li>

                                <%end%>

                            </ul>
                                
                    </div>
                                     

            </div>
        
        </div>
    </header>
</div>
