<%= form_for :pin, :url => {:action => :create}, html: {class: "form-inline"} do |f| %>
  <div class="field">
    <div class=" modal_tile">
      <h3>Create Pin </h3>
    </div>
    
    <div class=" border upload_image">
      <%= f.label :image ,"upload an image" %>
      <%= f.file_field :image %>
    </div>
    <div class=" border by_url">
      <%= f.label :image_remote_url, "or enter url"%>
      <%= f.text_field :image_remote_url%>
    </div>
    <div class=" border pin_priceinfo">
      <%= f.label :price, "Enter price" %>
      <%= f.text_field :price %>
    </div>
    <div class=" border pin_description">
      <%= f.label :description %>
      <%= f.text_area :description, :col =>30, :rows =>3 %>
    </div>
  </div>
  <div class="form-actions"> 
    <a href="#" rel="modal:close" class="btn btn-primary pull-right">Cancel</a>
    <%= f.submit "create", class: "btn btn-success pull-right" %>
  </div>
<% end %>