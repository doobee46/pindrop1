<%= form_for :pin, :url => {:action => :create} do |f| %>
  <div class="field">
    <%= f.label :image ,"upload an image" %>
    <%= f.file_field :image %>
    <%= f.label :image_remote_url, "or enter url"%>
    <%= f.text_field :image_remote_url%>
    <%= f.label :price, "Enter price" %>
    <%= f.text_field :price %>
    <%= f.label :description %>
    <%= f.text_area :description, :col =>30, :rows =>3 %>
  </div>
  <div class="actions">
    <%= f.submit "create", class: "btn btn-primary" %>
  </div>
<% end %>