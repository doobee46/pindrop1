<div class="container_16">
	<div class="grid_16">
		<div class="grid_16 index">
			<div class="follow_widget">
			 <%= image_tag @user.gravatar_url %>

				<div class="widget_info">
					<h1><%= @user.name %><span class="pin_posted"> <%=@user.pins.count%> Pins Posted </span></h1>
					<p><%= @user.description %></p>
					<%=image_tag('location.png')%> <h3><%= @user.location%></h3>
					<%= @user.follow_count%>

					<div class="btn_follows">
						<% if user_signed_in? %>
							<div id="follow_user">
							<%= render :partial => "shared/follow_user", :locals => {:user => @user} %>
							</div>
						<% end %>
					</div>

				</div>
				
			</div>
		</div>
		<div class="index3">
	   		<div id="pins">
				<%= render @pins %>
			</div>
			<%= will_paginate @pins %>
		</div>	
			
	</div>
</div>

