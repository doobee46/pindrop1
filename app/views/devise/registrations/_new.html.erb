   

                        <form>

                        	     <h3 class="form_title">New Account</h3>
                                 <p class="form_sub">Please fill out the information below to setup your account</p>

                                <fieldset>
                                    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

	                                 <div class="notice">
									  <%= devise_error_messages! %>
									 </div>

									  <%= f.label :name %>
									  <%= f.text_field :name%><br />

									  <%= f.label :email %>
									  <%= f.email_field :email %><br/>

									  <%= f.label :password %>
									  <%= f.password_field :password %><br/>

									  <%= f.label :password_confirmation %>
									  <%= f.password_field :password_confirmation %></br>

									  <span class="agreed">
	                                    By signing up, you agree to our <a href="">terms of use</a> and<a> privacy policy</a>
	                                  
	                                  </span></br></br> 

									  <%= f.submit "Sign up", class: 'btn-red'%>

									<% end %>

									

	                                <div class="retrieve"> 
									
									</div>
                                </fieldset>
                            </form>
  


